            <VBox>
                <HBox justifyContent="Center" class="noBottomSpacing">
                    <Button id="saveBtnId" text="{i18n>button.save.text}" icon="sap-icon://begin" press="onCollectPress" type="Emphasized" class="clickableButton"/>
                    <Text text=" " width="15px" />
                    <Button id="clearBtnId" text="{i18n>button.clear.text}" icon="sap-icon://sys-cancel" press="onClearPress" type="Default" class="clickableButton"/>
                </HBox>
            </VBox>
            <VBox id="dcHistorianTableContainer1">
                <Text text="   " />
                <ui:Table
                    id="dcHistorianTableId"
                    selectionMode="None"
                    visibleRowCount="{= ${dcHistorianModel>/dataList} ? ( ${dcHistorianModel>/dataList}.length > 5 ? 5 : ${dcHistorianModel>/dataList}.length ) : 0 }"
                    rows="{dcHistorianModel>/dataList}">
                    <ui:columns>
                        <ui:Column width="100px">
                            <Label text="{i18n>label.driftValue.text}" design="Bold"  />
                            <ui:template>
                                <Text text="{dcHistorianModel>DRIFT_VALUE}" wrapping="true"/>
                            </ui:template>
                        </ui:Column>
                        <ui:Column width="50px">
                            <Label text="{i18n>label.reck.text}" design="Bold"  />
                            <ui:template>
                                <Text text="{dcHistorianModel>RECK}" wrapping="true"/>
                            </ui:template>
                        </ui:Column>
                        <ui:Column width="50px">
                            <Label text="{i18n>label.spot.text}" design="Bold"  />
                            <ui:template>
                                <Text text="{dcHistorianModel>SPOT}" wrapping="true"/>
                            </ui:template>
                        </ui:Column>
                        <ui:Column width="100px">
                            <Label text="{i18n>label.errorCode.text}" design="Bold"  />
                            <ui:template>
                                <Text text="{dcHistorianModel>ERROR_CODE}" wrapping="true"/>
                            </ui:template>
                        </ui:Column>
                        <ui:Column>
                            <Label text="{i18n>label.remarks.text}" design="Bold"  />
                            <ui:template>
                                <Text text="{dcHistorianModel>REMARK}" wrapping="true"/>
                            </ui:template>
                        </ui:Column>
                        <ui:Column width="100px">
                            <Label text="{i18n>label.status.text}" design="Bold"  />
                            <ui:template>
                                <!-- <Text text="{dcHistorianModel>STATUS}" wrapping="true"/> -->
                                <core:Icon
                                    id="statusIcon"
                                    src="{= ${dcHistorianModel>STATUS} === 'PASS-COLLECTED' ? 'sap-icon://status-completed' :
                                            ${dcHistorianModel>STATUS} === 'FAIL-COLLECTED' ? 'sap-icon://decline' : 'sap-icon://appear-offline'}"
                                    color="{= ${dcHistorianModel>STATUS} === 'PASS-COLLECTED' ? '#28a745' : 
                                                ${dcHistorianModel>STATUS} === 'FAIL-COLLECTED' ? '#df6e0c' : '#b00'}"
                                    size="1.5rem"
                                    tooltip="{dcHistorianModel>STATUS}"
                                />
                            </ui:template>
                        </ui:Column>
                        <ui:Column>
                            <Label text="{i18n>label.userId.text}" design="Bold"  />
                            <ui:template>
                                <Text text="{dcHistorianModel>UserId}" wrapping="true"/>
                            </ui:template>
                        </ui:Column>
                        <ui:Column width="170px">
                            <Label text="{i18n>label.lastUpdatedAt.text}" design="Bold"  />
                            <ui:template>
                                <Text text="{dcHistorianModel>LastUpdatedAt}" wrapping="true"/>
                            </ui:template>
                        </ui:Column>
                    </ui:columns>
                </ui:Table>
                <Text text="      "  />
            </VBox> 
        </VBox>
    </content>
</Panel>

</mvc:View>
