<mvc:View 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:l="sap.ui.layout" 
    xmlns:f="sap.ui.layout.form" 
    xmlns:core="sap.ui.core" 
    xmlns:ui="sap.ui.table" 
    xmlns:html="http://www.w3.org/1999/xhtml" 
    controllerName="abb.views.calibrationDC.calibrationDCPlugin.calibrationDCPlugin.controller.MainView"
    width="100%" 
    height="100%">
		
    <Panel 
    id="panelPlugin"  
    width="100%" 
    height="100%" 
    expandable="false" 
    expanded="false" 
    accessibleRole="Region" 
    backgroundDesign="Transparent" 
    class="sapUiNoContentPadding">
    <headerToolbar>
        <Toolbar height="3rem">
            <Button
                id="backButton"
                visible="false"
                text="{i18n>template.back.btn}"
                tooltip="{i18n>template.back.tooltip}"
                icon="sap-icon://nav-back"
                press="onBackPress"/>
            <Title id="headerTitle" text=""/>
            <ToolbarSpacer/>
            <Button
                id="closeButton"
                visible="false"
                tooltip="{i18n>template.close.tooltip}"
                icon="sap-icon://decline"
                press="onClosePress"/>
        </Toolbar>
    </headerToolbar>
    <content>
    <VBox id="contentBoxId" visible="true">
        <f:SimpleForm
            id="calibrationForm"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="3"
            labelSpanL="3"
            labelSpanM="3"
            labelSpanS="12"
            adjustLabelSpan="false"
            columnsXL="2"
            columnsL="2"
            columnsM="2"
            class="sapUiSmallMargin sapUiNoContentPadding">

            <!-- Row 1 -->
            <Label text="{i18n>label.driftValue.text}" required="true" />
            <Input
                id="driftValueInputId"
                placeholder="{i18n>input.driftValue.placeHolder}"
                value="{dcDataModel>/DRIFT_VALUE}"
                liveChange="onLiveChangeNumber"
                >
                <layoutData>
                    <l:GridData span="L6 M6 S12"/>
                </layoutData>
            </Input>

            <Label text="{i18n>label.reck.text}" required="true" />
            <Input
                id="reckInputId"
                placeholder="{i18n>input.reck.placeHolder}"
                value="{dcDataModel>/RECK}"
                liveChange="onLiveChangeInt">
                <layoutData>
                    <l:GridData span="L6 M6 S12"/>
                </layoutData>
            </Input>

            <!-- Row 2 -->
            <Label text="{i18n>label.spot.text}" required="true" />
            <Input
                id="spotInputId"
                placeholder="{i18n>input.spot.placeHolder}"
                value="{dcDataModel>/SPOT}"
                liveChange="onLiveChangeInt">
                <layoutData>
                    <l:GridData span="L6 M6 S12"/>
                </layoutData>
            </Input>

            <Label id="errorCodeLabelId" text="{i18n>label.errorCode.text}" required="false" />
            <Input
                id="errorCodeInputId"
                placeholder="{i18n>input.errorCode.placeHolder}"
                value="{dcDataModel>/ERROR_CODE}">
                <layoutData>
                    <l:GridData span="L6 M6 S12"/>
                </layoutData>
            </Input>

            <!-- Row 3 -->
            <Label  id="remarksLabelId" text="{i18n>label.remarks.text}" required="false" />
            <TextArea
                id="remarkInputId"
                placeholder="{i18n>input.remarks.placeHolder}"
                value="{dcDataModel>/REMARK}"
                rows="2"
                width="100%"
                growing="true"
                growingMaxLines="4"
                showExceededText="true">
                <layoutData>
                    <l:GridData span="L6 M6 S12"/>
                </layoutData>
            </TextArea>

            <Label text="{i18n>label.status.text}" required="true" />
            <Switch
                id="statusSwitchId"
                state="{dcDataModel>/STATUS}"
                customTextOn="PASS"
                customTextOff="FAIL"
                change="onStatusChange">
                <layoutData>
                    <l:GridData span="L6 M6 S12" />
                </layoutData>
            </Switch>
        </f:SimpleForm>
        
